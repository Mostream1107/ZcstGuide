/* pages/map/map.wxss */
.card {
  height: 90px;
  width: 100%;
  display: flex;
  justify-content: center;
  /* align-items: flex-end; */
  align-items: center;
  background-color: #f2f1ed;
}

.card-top {
  height: 80px;
  background-color: #ffffff;
  border-radius: 10px;
  display: flex;
  justify-content: space-between;
  box-shadow: 1px 1px 5px 2px rgba(0, 0, 0, 0.2)
}

.card-top-left {
  display: flex;
  flex-direction: column;
  border-radius: 10px 0 0 10px;
}

.card-top-left-view {
  height: 50%;
  margin-left: 10px;
  display: flex;
  align-items: center;
}

.up {
  border-bottom: 1px solid #d8d8d8;
}

.card-top-circle {
  width: 15px;
  height: 15px;
  border-radius: 50%;
  margin-right: 10px;
}

.start {
  background-color: #8e1d21;
}

.end {
  background-color: #404481;
}

.card-top-input {
  letter-spacing: 1px;
  /* width: 100%; */
}

.card-top-middle {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 10px 10px 0;
  /* margin-left: 10px; */
}

.card-top-middle-button {
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-top-right {
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 0 10px 10px 0;
  /* margin-left: 10px; */
  margin-right: 10px;
}

.card-top-right-button {
  background-color: #73a5d6;
  color: white;
  width: 70px;
  height: 40px;
  border-radius: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.relative {
  position: relative;
  height: 40px;
  display: flex;
  justify-content: center;
}

.card-bottom-category {
  height: 100%;
  /* background-color: #f0f0f099; */
  text-align: center;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}

.card-bottom-category-label {
  width: 71px;
  height: 30px;
  /* height: 40px; */
  margin-left: 2px;
  margin-right: 2px;
  display: flex;
  align-items: center;
  justify-content: center;
  /* border-bottom: 5px solid #f0f0f099; */
  /* border-bottom: 5px solid transparent; */
  font-weight: bold;
}

.choose {
  /* border-bottom: 5px solid #404481; */
  /* background-color: white; */
  /* background-color: #ffffff99; */
  /* background-color: #20b6a8; */
  background-color: #39a096;
  color: white;
  border-radius: 20px;
  font-weight: bold;
}

.map_right_card {
  height: auto;
  position: absolute;
  right: 0px;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.location {
  width: 60px;
  height: 65px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.instruction {
  height: 55px;
  width: 55px;
  background-color: transparent;
  border-radius: 50%;
  color: #333;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 10px;
  margin-right: 5px;
  box-shadow: none;
}

.img {
  width: 50px;
  height: 50px;
  object-fit: contain;
  margin-right: 5px;
}

.duration_and_distance {
  display: flex;
  justify-content: space-between;
}

.duration_and_distance_style {
  display: flex;
  align-items: flex-end;
  font-size: larger;
  font-weight: bold;
}

.duration_and_distance_text {
  background-color: white;
  padding: 8px;
}

.card-bottom {
  /* height: 230px; */
  position: relative;
  width: 100%;
  height: 50px;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-bottom-button {
  /* height: 35px; */
  /* margin-top: 5px; */
  /* padding: 5px 30px 5px 30px; */
  padding: 5px;
  width: 94%;
  font-size: larger;
  /* color: white; */
  /* background-color: #1AAD19; */
  /* background-color: #f0f0f0; */
  color: #0152d6;
  background-color: #f3f3ff;
  border: 1px solid #0152d6;
  border-radius: 10px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.road {
  display: flex;
  text-align: left;
}

.r_duration_and_distance {
  margin-bottom: 15px;
}

.road_start {
  margin-bottom: 10px;
}

.road_end {
  margin-top: 10px;
}

/* 历史记录按钮 */
.history-btn {
  width: 55px;
  height: 55px;
  background-color: transparent;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 5px;
  margin-bottom: 10px;
  color: #333;
  box-shadow: none;
}

.history-icon {
  font-size: 40px;
  margin-right: 10px;
  cursor: pointer;
}

/* 历史记录列表 */
.history-list {
  max-height: 400rpx;
  overflow-y: auto;
}

.history-empty {
  padding: 30rpx;
  text-align: center;
  color: #999;
}

.history-item {
  padding: 20rpx;
  border-bottom: 1px solid #eee;
  position: relative;
  transition: background-color 0.3s;
}

.history-item:active {
  background-color: #f0f0f0;
}

.history-item-name {
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.history-item-info {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

.history-item-category {
  background-color: #f0f0f0;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.history-item-time {
  color: #999;
  font-size: 22rpx;
}

/* 底部历史记录按钮 */
.bottom-history-btn {
  position: absolute;
  right: 10px;
  width: 40px;
  height: 40px;
  background-color: transparent;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #333;
  box-shadow: none;
}

.bottom-history-icon {
  font-size: 30px;
  color: #333;
}

/* 历史记录标签页 */
.history-tabs {
  display: flex;
  margin-bottom: 10rpx;
  border-bottom: 1px solid #eee;
}

.history-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.active-tab {
  color: #3388ff;
  font-weight: bold;
}

.active-tab:after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 25%;
  width: 50%;
  height: 6rpx;
  background-color: #3388ff;
  border-radius: 3rpx;
}

/* 路线历史记录项样式 */
.route-item {
  padding: 24rpx 20rpx;
}

.route-item-path {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.route-point {
  font-weight: bold;
  font-size: 28rpx;
  max-width: 45%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.route-arrow {
  flex: 1;
  text-align: center;
  color: #3388ff;
  font-size: 32rpx;
  margin: 0 10rpx;
}

.route-categories {
  display: flex;
  gap: 10rpx;
}

/* 热门地点推荐区域样式 */
.popular-locations {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 1px;
  z-index: 100;
}

.popular-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 12px;
  border-bottom: 1px solid #eee;
}

.popular-title {
  font-weight: bold;
  font-size: 14px;
  color: #333;
}

.popular-close {
  font-size: 18px;
  color: #999;
  padding: 0 5px;
}

.popular-scroll {
  height: 75px;
  width: 100%;
}

.popular-items {
  display: flex;
  padding: 10px;
}

.popular-item {
  min-width: 110px;
  height: 55px;
  margin-right: 10px;
  padding: 8px 12px;
  background-color: #f5f6fa;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.popular-name {
  font-size: 14px;
  font-weight: 500;
  color: #333;
}

.popular-freq {
  font-size: 12px;
  color: #888;
}

.popular-visited {
  background-color: #e8eaf6;
  padding: 2px 5px;
  border-radius: 4px;
  font-size: 11px;
}

/* 个性化推荐区域样式 */
.recommendation-section {
  width: 100%;
  background-color: rgba(255, 255, 255, 0.9);
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  margin-bottom: 1px;
  z-index: 100;
}

.recommendation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 12px;
  border-bottom: 1px solid #eee;
}

.recommendation-title {
  font-weight: bold;
  font-size: 14px;
  color: #333;
}

.recommendation-actions {
  display: flex;
  align-items: center;
}

.recommendation-refresh {
  font-size: 16px;
  margin-right: 10px;
  color: #666;
}

.recommendation-close {
  font-size: 18px;
  color: #999;
  padding: 0 5px;
}

.recommendation-scroll {
  height: 85px;
  width: 100%;
}

.recommendation-items {
  display: flex;
  padding: 10px;
}

.recommendation-item {
  min-width: 120px;
  height: 65px;
  margin-right: 12px;
  padding: 8px 12px;
  background-color: #f0f7ff;
  border-radius: 8px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.recommendation-category {
  font-size: 11px;
  color: #888;
  background-color: rgba(0, 0, 0, 0.05);
  padding: 2px 5px;
  border-radius: 3px;
  align-self: flex-start;
}

.recommendation-name {
  font-size: 14px;
  font-weight: 500;
  color: #333;
  margin: 3px 0;
}

.recommendation-score {
  font-size: 11px;
  color: #5c6bc0;
  align-self: flex-end;
}

/* 基于时间的推荐区域样式 */
.time-based-recommendations {
  background-color: rgba(250, 250, 255, 0.95);
}

.time-item {
  background-color: #f6f3ff;
  border-left: 4px solid #9c88ff;
}

/* 小屏幕设备优化 */
@media screen and (max-width: 350px) {
  .recommendation-item, .popular-item {
    min-width: 100px;
  }
  
  .recommendation-scroll, .popular-scroll {
    height: 80px;
  }
}