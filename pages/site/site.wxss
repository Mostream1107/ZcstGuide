/* pages/site/site.wxss */
.card {
    background-color: white;
    display: flex;
    flex-direction: row;
    width: 100%;
    height: 100vh;
    overflow: hidden;
}

.card-left {
    width: 75px;
    background-color: #f0f0f0;
}

.card-left-scorll-view {
    height: 100%;
    background-color: #f0f0f0;
    width: 75px;
    text-align: center;
}

.card-left-scorll-view-label {
    width: 75px;
    height: 45px;
    display: flex;
    align-items: center;
    justify-content: center;
}

.choose {
    border-left: 6px solid #404481;
    background-color: white;
}

.card-right {
    background-color: white;
    flex: 1;
    width: calc(100% - 75px);
}

.card-right-title {
    margin: 10px;
    font-size: 20px;
    display: flex;
    align-items: center;
    height: 30px;
}

.card-right-title-icon {
    height: 30px;
    width: 30px;
    margin-left: 5px;
    margin-right: 10px;
}

.card-right-content {
    display: flex;
    flex-flow: row wrap;
    padding: 0 5px;
}

.card-right-content-card {
    margin-top: 5px;
    font-size: 14px;
    width: 33.33%;
    display: flex;
    flex-direction: column;
    align-items: center;
    box-sizing: border-box;
    padding: 0 5px;
}

.card-right-content-card-img {
    height: 90px;
    width: 90px;
    border-radius: 10px;
}

.card-right-content-card-context {
    display: flex;
    width: 100%;
    padding: 0 5px;
    box-sizing: border-box;
}

.card-right-content-card-context-icon {
    height: 20px;
    width: 20px;
}

.card-container {
    height: 100%;
}

.card-container-scorll {
    height: 100%;
    margin: 10px;
    border-radius: 10px;
    background-color: honeydew;
}

.card-container-scorll-view {
    height: 100%;
    background-color: #2dabf3;
    width: 100px;
    color: white;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: space-around;
}

.card-container-scorll-view-label {
    margin-left: 5px;
    margin-right: 5px;
}

.card-container-scorll-view-desc {
    height: 210px;
    width: auto;
    padding: 10px;
    font-size: 18px;
}

/* 加载状态 */
.loading-container {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100px;
}

.loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid rgba(62, 123, 250, 0.2);
    border-top-color: var(--primary-color);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}